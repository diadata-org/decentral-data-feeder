FROM golang:1.23 as build

ARG GITHUB_TOKEN

# RUN git config --global --add url."https://${GITHUB_TOKEN}":@github.com/diadata-org/diaprotocol.insteadOf "https://github.com/diadata-org/diaprotocol"

# ENV GOPRIVATE=github.com/diadata-org/diaprotocol

WORKDIR $GOPATH/src/diadata-org/decentral-data-feeder
COPY ./ ./ 

RUN go mod download
RUN go mod tidy

RUN go install


FROM gcr.io/distroless/base


COPY --from=build /go/bin /bin/luminaDataFeeder

CMD ["luminaDataFeeder"]
